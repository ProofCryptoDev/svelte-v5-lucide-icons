{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true
  },
  "include": [
    "dist/**/*.d.ts",
    "dist/**/*.ts",
    "dist/**/*.svelte",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.svelte",
    "package.json"
  ]
}
